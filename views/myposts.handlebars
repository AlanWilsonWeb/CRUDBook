<div id="top">
</div>
<div id="postbody">
    {{#each post}}
      <div class="post">
        <div class="posthead">
          <table class="posttable">
            <tr>
              <td class="left"><h3># {{ this.ID }} | {{ this.User.username }}</h3></td>
              <td class="right"><h5>{{ this.timestamp }}</h5>
                <form action="/killpost" method="post">
                <div>
                <input type="hidden" name="postid" value="{{ this.ID }}">
                <input type="submit" value="DELETE"/>
                </div>
              </form>
              </td>
            </tr>
          </table>
        </div>
          <h3>{{ this.message }}</h3>
      </div>
    {{/each}}
</div>
